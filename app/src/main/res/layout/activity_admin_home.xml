<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#1976D2"
    tools:context=".admin.AdminHomeActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#7B1FA2"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#70B2F4">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:onClick="btnWardensClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#1976D2"
            android:layout_marginRight="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wardens"
                android:textColor="@color/black"
                android:layout_marginLeft="35dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#70B2F4">
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:onClick="btnOfficersClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#1976D2"
            android:layout_marginRight="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="560dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:src="@drawable/img_9"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residential officer"
                android:layout_marginLeft="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="26dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#70B2F4">
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:onClick="btnStudentsClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#1976D2"
            android:layout_marginRight="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="560dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/img_8"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students"
                android:layout_marginLeft="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#70B2F4">
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:onClick="btnReportClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#1976D2"
            android:layout_marginRight="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="560dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:src="@drawable/img_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Report"
                android:layout_marginLeft="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="26dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#70B2F4">
        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:onClick="btnLogoutClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="#1976D2"
            android:layout_marginRight="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="560dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:src="@drawable/img_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginLeft="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>